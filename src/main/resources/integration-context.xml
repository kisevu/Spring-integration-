<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/integration
                           http://www.springframework.org/schema/integration/spring-integration.xsd">

    <int:channel id="registerChannel" />

     <int:inbound-channel-adapter ref="personDirectoryService" method="findNewPeople" channel="registerChannel">
         <int:poller fixed-rate="3000" />
     </int:inbound-channel-adapter>

    <int:outbound-channel-adapter channel="registerChannel" method="registerEmail" ref="personRegistrationService">

    </int:outbound-channel-adapter>

    <bean id="personDirectoryService" class="com.ameda.kevin.integration_spring.PersonDirectoryService" />

    <bean id="personRegistrationService" class="com.ameda.kevin.integration_spring.PersonRegistrationService"/>
</beans>

<!--
* Outbound channel Adapter
*****************************
* Does the opposite of the inbound channel adapter.
* Outbound channel adapters sends messages out from the messaging system.

-->
