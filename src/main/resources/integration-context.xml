<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:int="http://www.springframework.org/schema/integration"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/integration
                           http://www.springframework.org/schema/integration/spring-integration.xsd">



    <int:channel id="printChannel" />
    <int:channel id="upperCaseChannel" />

     <int:inbound-channel-adapter ref="personDirectoryService" method="findNewPeople" channel="printChannel">
         <int:poller fixed-rate="3000" />
     </int:inbound-channel-adapter>

    <bean id="personDirectoryService" class="com.ameda.kevin.integration_spring.PersonDirectoryService" />

    <int:service-activator ref="upperCaseService" method="execute" input-channel="upperCaseChannel" />
    <bean id="upperCaseService" class="com.ameda.kevin.integration_spring.UpperCaseService" />

   <int:service-activator ref="printService" method="print" input-channel="printChannel"/>
    <bean id="printService" class="com.ameda.kevin.integration_spring.PrintService" />
</beans>

<!--
* Inbound channel Adapter
*****************************
* An inbound channel adapter receives messages by pulling  an external system or by being notified by an
 external system.
 * When the message is received is delivered to messaging system to be sent down stream in the message flow.
 The inbound adapter helps integrate with those external systems that need to deliver messages to our application via
 the messaging system.
 * Inbound channel adapter allows external systems implement a variety of technologies.  This external systems
 can interact with our application because spring integration performs the necessary translations of the external's
 message to one suited for our messaging system.
 * Inbound channel adapter can pull or can be event-driven.
 * in our case we have made the inbound channel adapter to be a puller and not an event-driven
-->
